// tsconfig.json
{
  "compilerOptions": {
    "module": "commonjs",
    "pretty": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "ES2021",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "baseUrl": "./src",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "strict": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "swc": true
  }
}
